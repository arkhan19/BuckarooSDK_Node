{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ES2021", "dom"],
        "strict": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        /* Skip type checking of declaration files. */ "forceConsistentCasingInFileNames": true,
        /* Disallow inconsistently-cased references to the same file. */ "declaration": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "dist",
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts"]
}
